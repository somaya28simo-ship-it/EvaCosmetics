@model WebApplication1.Models.Product

<div class="container my-5">
    <div class="row">
        <!-- صورة المنتج -->
        <div class="col-md-6 text-center">
            <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" class="img-fluid rounded shadow-sm" style="max-height: 500px;" />
        </div>

        <!-- تفاصيل المنتج -->
        <div class="col-md-6">
            <h2 class="fw-bold mb-3">@Model.Name</h2>
            <p class="text-muted">@Model.Description</p>
            <h4 class="text-danger fw-semibold mb-4">$@Model.Price</h4>

            <button class="btn btn-dark btn-lg px-5">Add to Bag</button>

            <div class="mt-4">
                <p><strong>Stock:</strong> @Model.Stock</p>
                <p><strong>Shipping:</strong> Free worldwide shipping</p>
            </div>
        </div>
    </div>
</div>
<div class="container mb-5">
    <hr />
    <h4 class="mb-4">Customer Reviews</h4>

    <div class="card p-4 bg-light border-0 shadow-sm">
        <!-- Review 1 -->
        <div class="d-flex align-items-start mb-3">
            <img src="~/Images/User1.jfif" class="rounded-circle me-3" alt="User" style="width: 50px; height: 50px; object-fit: cover;" />
            <div>
                <h6 class="mb-1">Sara M.</h6>
                <p class="mb-0 text-muted">“Great quality product! Arrived fast and smells amazing. Would buy again.”</p>
            </div>
        </div>

        <hr class="my-3" />

        <!-- Review 2 -->
